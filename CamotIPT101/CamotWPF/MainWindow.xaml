<Window x:Class="FlowerShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flower Shop" Height="460" Width="540" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF9FAF8">
        <StackPanel Margin="20">
            <TextBlock Text="Flower Shop" 
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Flower:" VerticalAlignment="Center" Width="55"/>
                <TextBox Name="txtName" Width="110" Margin="0,0,12,0"/>
                <TextBlock Text="Price:" VerticalAlignment="Center" Width="45"/>
                <TextBox Name="txtPrice" Width="80"/>
                <Button Content="Add" Width="60" Margin="12,0,0,0" Click="Add_Click"/>
                <Button Content="Update" Width="70" Margin="10,0,0,0" Click="Update_Click"/>
                <Button Content="Delete" Width="70" Margin="10,0,0,0" Click="Delete_Click"/>
            </StackPanel>
            <ListView Name="FlowerList" Height="260" Margin="0,0,0,10" SelectionChanged="FlowerList_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Flower" Width="190" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Price" Width="70" DisplayMemberBinding="{Binding Price}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>