<Window x:Class="SimpleLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5">
        <StackPanel VerticalAlignment="Center" Margin="50">
            <TextBlock Text="Simple Login" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Username:"/>
            <TextBox x:Name="txtUsername" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,15" Height="25"/>

            <Button Content="Login" Height="30" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Window>
